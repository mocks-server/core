{
  "extends": [
    "config:base"
  ],
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts"]
  },
  "automerge": true,
  "major": {
    "automerge": false,
    "masterIssueApproval": true
  },
  "minor": {
    "automerge": false
  },
  "baseBranches": ["release"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "rangeStrategy": "widen"
    }
  ],
  "separateMultipleMajor": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessage": "{{semanticPrefix}}Update {{depName}} to {{newVersion}} ðŸŒŸ",
  "prTitle": "{{#if isPin}}Pin{{else}}Update{{/if}} dependency {{depName}} to version {{#if isRange}}{{newVersion}}{{else}}{{#if isMajor}}{{newVersionMajor}}.x{{else}}{{newVersion}}{{/if}}{{/if}} ðŸŒŸ",
  "prConcurrentLimit": 5,
  "rebaseStalePrs": true,
  "masterIssue": true
}
