{
  "name": "@mocks-server/core",
  "version": "1.4.6",
  "description": "Pluggable mock server supporting multiple api behaviors",
  "keywords": [
    "mocks",
    "server",
    "mock",
    "fixtures",
    "behaviors",
    "api",
    "rest",
    "cli",
    "express",
    "testing",
    "development",
    "core",
    "pluggable",
    "plugins"
  ],
  "author": "Javier Brea",
  "license": "Apache-2.0",
  "repository": "https://github.com/mocks-server/core",
  "homepage": "https://www.mocks-server.org",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "index.js"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js src test jest.config.js jest.acceptance.config.js",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:acceptance": "jest --config=jest.acceptance.config.js --runInBand --detectOpenHandles",
    "test:coverage": "npm run test",
    "test:ci": "npm run test && npm run test:acceptance",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "@hapi/boom": "9.1.0",
    "commander": "5.0.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-request-id": "1.4.1",
    "fs-extra": "9.0.0",
    "lodash": "4.17.15",
    "md5": "2.2.1",
    "node-watch": "0.6.3",
    "require-all": "3.0.0",
    "route-parser": "0.0.5",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "coveralls": "3.0.9",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "is-promise": "2.1.0",
    "jest": "25.4.0",
    "lint-staged": "10.1.7",
    "prettier": "2.0.4",
    "request": "2.88.2",
    "request-promise": "4.2.5",
    "sinon": "9.0.2",
    "strip-ansi": "6.0.0",
    "tree-kill-sync": "1.0.0"
  },
  "lint-staged": {
    "src/**/*.js": "eslint",
    "test/**/*.js": "eslint",
    "index.js": "eslint",
    "jest.config.js": "eslint",
    "jest.acceptance.config.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "engines": {
    "node": "10.x || 12.x || 13.x"
  }
}
