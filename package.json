{
  "name": "@mocks-server/core",
  "version": "2.1.0",
  "description": "Pluggable mock server supporting multiple route variants and mocks",
  "keywords": [
    "mocks",
    "server",
    "mock",
    "routes",
    "route variants",
    "api",
    "rest",
    "cli",
    "express",
    "testing",
    "development",
    "middleware",
    "pluggable",
    "plugins"
  ],
  "author": "Javier Brea",
  "license": "Apache-2.0",
  "repository": "https://github.com/mocks-server/core",
  "homepage": "https://www.mocks-server.org",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "scaffold",
    "src",
    "index.js"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js src test",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:e2e": "jest --config=jest.e2e.config.js --runInBand --detectOpenHandles",
    "test:unit": "npm run test"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "@hapi/boom": "9.1.2",
    "commander": "6.2.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-request-id": "1.4.1",
    "fs-extra": "9.1.0",
    "globule": "1.3.2",
    "is-promise": "4.0.0",
    "lodash": "4.17.21",
    "md5": "2.3.0",
    "node-watch": "0.7.1",
    "require-all": "3.0.0",
    "route-parser": "0.0.5",
    "winston": "3.3.3",
    "winston-array-transport": "1.0.1"
  },
  "devDependencies": {
    "cross-fetch": "3.1.2",
    "cross-spawn": "7.0.3",
    "eslint": "7.22.0",
    "eslint-plugin-no-only-tests": "2.4.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "sinon": "9.2.4",
    "strip-ansi": "6.0.0",
    "tree-kill": "1.2.2",
    "wait-on": "5.3.0"
  },
  "lint-staged": {
    "src/**/*.js": "eslint",
    "test/**/*.js": "eslint",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "engines": {
    "node": "12.x || 14.x || 15.x"
  }
}
